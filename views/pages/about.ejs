    <%- contentFor('hero')%>

        <script type="text/javascript">
            $(window).load(function () {
                //Checking device screen size to desplay site in a user friendly way
                getBootstrapDeviceSize();
                //if not a guest hide links to pages with wedding info
                if ("<%= guest%>" == 'false') {
                    document.getElementById("guestEyesOnly").style.display = "none";

                } else if ("<%= guest%>" == 'none') {
                    document.getElementById("loginFirst").style.display = "none";
                    document.getElementById("guestEyesOnly").style.display = "none";

                } else {
                    document.getElementById("guestEyesOnly").style.display = "inline";
                    document.getElementById("guestEyesOnly2").style.display = "block";
                }
            });


            //toggling nav bar on desktop to save header space
            $('#navBar').mouseenter(function () {
                document.getElementById("loginFirst").style.display = "inline";
            })

            $('#navBar').mouseleave(function () {
                document.getElementById("loginFirst").style.display = "none";
            })
        </script>







