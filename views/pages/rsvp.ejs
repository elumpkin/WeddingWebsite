<%- contentFor('hero')%>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
<script  type="text/javascript">
 $(window).load(function()
{
    document.getElementById('body').id = 'index';
    
});
    $(window).mousemove(function(){
        indexon();
    });

    $(window).scroll(function() {

        if ($(this).scrollTop()>0)
        {
           $('#headercontent').fadeOut();
           $('#headerh2').removeClass("h1").addClass("h3");
        }
       else
        {
         $('#headercontent').fadeIn();
         $('#headerh2').removeClass("h3").addClass("h1");
        }
    });

    
    </script>

<section class="hero">
        <div id= 'headercontent'  class="hero-content">
         <h2>
            RSVP
         </h2>
        
     </div>
    </section>
 
 <%- contentFor('body')%>
   
<div class="jumbotron text-center" >
        <h2>
            RSVP
        </h2>      
        <p>
            Use the form below to let us know if you are coming and what accomadations you need.
            Even if you sent out your mailed RSVP note, feel free use the form below just in case. 
        </p>  
        <div class='row'>
            <div class='col-sm-6 col-sm-offset-3'>
                
    
                <form action="/rsvp" method="POST">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" name="firstName" class="form-control">
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" name="lastName" class="form-control">
                </div>
                <div class="form-group">
                    <label>Plus One Name</label>
                    <input type="text" name="extraName" class="form-control">
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label>Do you need to be added to the hotel block?</label><br>
                    <input type="radio" name="hotel" value="yes"> Yes
                    <input type="radio" name="hotel" value="no"> No<br>
                </div>
                <div class="form-group">
                    <label>Food Allergies or Restrictions</label>
                    <input type="text" name="food" class="form-control">
                </div>
               <!--  <div class = "form-group">
                    <label>Test entry</label>
                    <input type="text" name="test" class="form-control">
                </div> -->
                <div class="form-group">
                    <label>Any thing you'd like us to know or consider?</label>
                    <input type="text" name="extra" class="form-control">
                </div>
             <div class="form-group text-center">
                 <button type="submit" class="btn btn-primary btn-lg">
                    Submit
                 </button>
             </div>
                </form>
            </div>
        </div>
           
</div>