        <script type="text/javascript">
            var test;

            $(window).load(function () {
                getBootstrapDeviceSize();


                test = 0;
                document.getElementById('body').id = 'index';
                document.getElementById('hotel').style.display = "none";
                document.getElementById('no').checked = true;



            });

            function formReveal() {
                if (document.getElementById('yes').checked) {
                    document.getElementById('hotel').style.display = 'block';
                } else {
                    document.getElementById('hotel').style.display = 'none';
                    document.getElementById('roomAmount').options[0].selected = true;
                    document.getElementById('rooms').options[0].selected = true;
                }
            }


            function formcheck(check) {
                if (test == 0) {
                    if (check) {
                        window.alert("Welcome back! \n\nWe found your information in our database. \n\nIf you would like to make change to your RSVP, please indicate you are updating your information below. \n\nThank you!");
                        test = 1;
                    } else {
                        test = 1;
                    }
                }

            }
        </script>

        

        <%- contentFor('body')%>
            <div id="users-device-size">
                <div id="xs" class="visible-xs"></div>
                <div id="sm" class="visible-sm"></div>
                <div id="md" class="visible-md"></div>
                <div id="lg" class="visible-lg"></div>
            </div>
            <div id="body-content">
                    <div class="container">
                            <div class="animated fadeInUp">
                                <h2 id="magAs">
                                    RSVP

                                </h2>
                            </div>
                        </div>
                <div onmouseover="formcheck('<%= results[0]%>')" class=" text-center">

                    <section class="container form-elegant">

                        <!--Form without header-->
                        <div class="card">

                            <div class="card-body mx-4">
                                <br>
                                <br>

                                <p class="h3 text-center mb-4" id="AUtext">
                                    <strong>
                                        Use the form below to let us know if you are coming and what accomadations you need. Even if you sent out your mailed RSVP
                                        note, feel free use the form below just in case.
                                    </strong>
                                </p>
                                <br>

                                <br>
                                <div class='row'>
                                    <div class='col-md-10 col-md-offset-1'>
                                        <form action="/rsvp" method="POST">
                                            <div class="md-form">
                                                <label style="font-size: 12px; " for="form3">First Name</label>
                                                <input  style="font-size: 20px; " type="text" name="firstName" class="form-control" id="fn" required>
                                            </div>
                                            <div class="md-form">
                                                <label style="font-size: 12px; ">Last Name</label>
                                                <input  style="font-size: 20px; " type="text" name="lastName" class="form-control" id="ln" required>
                                            </div>
                                            <div class="md-form">
                                                <label style="font-size: 12px; ">Phone Number </label>
                                                <input  style="font-size: 20px; " type="text" name="Phone" class="form-control">
                                            </div>
                                            <div class="md-form">
                                                    <label style="font-size: 12px; ">Plus One Name</label>
                                                    <input  style="font-size: 20px; " type="text" name="extraName" class="form-control">
                                                </div>
    
                                                <div class="md-form">
                                                    <label style="font-size: 12px; ">Email</label>
                                                    <input  style="font-size: 20px; " type="text" name="email" class="form-control" id="em" required>
                                                </div>
                                            <div class="form-group">
                                                    <div class="form-inline" >
                                                <label style="font-size: 16px; ">Will you be joining us?</label>
                                                
                                                    <div class="form-group">
                                                    <input   type="radio" name="attending" value="yes" id="attendyes" checked="checked" >
                                                    <label style="font-size: 12px; " for="attendyes">Yes</label>
                                                </div>

                                                <div class="form-group">
                                                    <input type="radio" name="attending" value="no" id="attendno"  >
                                                    <label style="font-size: 12px; " for="attendno">No</label>
                                                </div>
</div>
                                            </div>
                                            <br>
                                            
                                            <div class="form-group">
                                                    <div class="form-inline" >
                                                <label style="font-size: 16px; ">Do you need to be added to the hotel block?</label>
                                                
                                                    <div class="form-group">
                                                    <input  type="radio" name="hotel" value="yes" id="yes" onclick="formReveal()">
                                                    <label style="font-size: 12px; " for="yes">Yes</label>
                                                </div>

                                                <div class="form-group">
                                                    <input  type="radio" name="hotel" value="no" id="no" checked="checked" onclick="formReveal()">
                                                    <label style="font-size: 12px; " for="no">No</label>
                                                </div>
</div>
                                            </div>
                                            <br>
                                            <div class="md-form" id="hotel" style="display: none">
                                                <p id="AUtext">
                                                    We have a hotel block reserved. After submitting this form, please visit the <a href="https://cobonie2018.herokuapp.com/venue" target="_Blank" style="display:inline">Logistics </a>  tab for more information. 
                                                </p>
                                                <br>
                                                <br>

                                                <div  class="md-form">
                                                <select class="mdb-select colorful-select dropdown-primary" name="rooms" id="rooms">
                                                    <option style="font-size: 20px;" value="0">0</option>
                                                    <option value="1"><h4>1</h4></option>
                                                    <option value="2">2</option>
                                                </select>
                                                <label style="font-size: 12px; " for="rooms">How many rooms do you need?</label>
                                            </div>
                                                <br>
                                                <div  class="md-form">
                                                <select class="mdb-select colorful-select dropdown-primary"  name="roomAmount" id='roomAmount'>
                                                        <option value="0">0</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                </select>
                                                <label style="font-size: 12px; " for="roomAmount">What is the max number of beds needed per room?</label>
                                            </div>
                                            </div>
                                           
                                            <div class="md-form">
                                                <label style="font-size: 12px; ">Food Allergies and Restrictions</label>
                                                <input  style="font-size: 20px; " type="text" name="food" class="form-control">
                                            </div>
                                            <div class="md-form">
                                                <label style="font-size: 12px; ">Any thing you'd like us to know or consider?</label>
                                                <input  style="font-size: 20px; " type="text" name="extra" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inline" >
                                                        <label style="font-size: 16px; ">Are you updating your information?</label>

                                                <div class="form-group ">
                                                    <input  type="radio" name="update" value="yes" id="Updateyes" >
                                                    <label style="font-size: 12px; " for = "Updateyes" >Yes</label>
                                                </div>

                                                <div class="form-group">
                                                    <input  type="radio" name="update" value="no" id="Updateno" checked="checked" >
                                                    <label style="font-size: 12px; " for= "Updateno">No</label>
                                                </div>
                                            </div>
                                                <br>

                                            </div>
                                            <div class="md-form text-center">
                                            <button style="width:100%" type="submit" class="btn btn-unique btn-lg waves-effect" onclick="bye()">
                                                <h4>Submit</h4>
                                            </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </section>

                </div>
            </div>